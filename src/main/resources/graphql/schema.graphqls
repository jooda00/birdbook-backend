type Book {
    id: ID!
    title: String!
    author: String!
    isbn: String!
}

# input type
input BookReq {
    title: String!
    author: String!
    isbn: String!
}

# save
type Mutation {
    saveBook(input: BookReq!): Book!
}

# Query가 꼭 포함되어야 함
type Query {
    # 기본적인 책 조회를 위한 쿼리 추가
    getBooks: [Book!]! # 모든 책을 조회하는 쿼리
    getBook(id: ID!): Book # ID로 특정 책을 조회하는 쿼리
}